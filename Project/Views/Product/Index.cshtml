@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <h1>Products</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <div class="row mb-3">
        <div class="col-md-6">
            <form asp-action="Search" method="get" class="form-inline">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search products..." value="@ViewBag.SearchTerm">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-outline-secondary">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (item.Images?.Any() == true)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Images.First().ImageData)" 
                             class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                            <span class="text-muted">No image available</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <strong>Price:</strong> @item.Price.ToString("C")<br>
                            <strong>Category:</strong> @item.Category?.Name<br>
                            <strong>Brand:</strong> @item.Brand?.Name
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 