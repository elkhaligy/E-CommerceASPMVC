                <div class="col-lg-9 col-12">
                    <div class="product-grids-head">
                        <div class="product-grid-topbar">
                            <div class="row align-items-center">
                                <div class="col-lg-7 col-md-8 col-12">
                                    <div class="product-sorting">
                                        <label for="sorting">Sort by:</label>
                                        <select class="form-control" id="sorting">
                                            <option>Price (Highest First)</option>
                                            <option>Price (Lowest First)</option>
                                            <option>Name (A - Z)</option>
                                            <option>Name (Z - A)</option>
                                        </select>
                                        <h3 class="total-show-product">Showing: <span>@Model.TotalItems items</span></h3>
                                    </div>
                                </div>
                                <div class="col-lg-5 col-md-4 col-12">
                                    <nav>
                                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                            <button class="nav-link active" id="nav-grid-tab" data-bs-toggle="tab"
                                                data-bs-target="#nav-grid" type="button" role="tab"
                                                aria-controls="nav-grid" aria-selected="true"><i
                                                    class="lni lni-grid-alt"></i></button>
                                            <button class="nav-link" id="nav-list-tab" data-bs-toggle="tab"
                                                data-bs-target="#nav-list" type="button" role="tab"
                                                aria-controls="nav-list" aria-selected="false"><i
                                                    class="lni lni-list"></i></button>
                                        </div>
                                    </nav>
                                </div>
                            </div>
                        </div>
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-grid" role="tabpanel"
                                aria-labelledby="nav-grid-tab">
                                <div class="row">
                                        @foreach (var product in Model.Products!)
                                            {

                                    <div class="col-lg-4 col-md-6 col-12">
                                        <!-- Start Single Product -->
                                            <div class="single-product" style="height: 420px;" >
                                                <div class="product-image">
                                                    @* <img  src="data:image/jpeg;base64,@Convert.ToBase64String(product.Images.First().ImageData) alt="#"> *@
                                                    @if (product.Images!.Any())
                                                    {
                                                        <img src="@product.Images!.First().ImagePath"
                            class="card-img-top " alt="@product.Name" style="height: 200px; width:500px ; object-fit:contain ;">
                                                    }
                                                    else
                                                    {
                                                        <img src="/images/post-thumb-1.jpg"
                            class="card-img-top " alt="@product.Name" style="height: 200px; width:500px ; object-fit:contain ;">
                                                    }
                                                    <div class="button">
                                                        <a  class="btn" onclick="addToCart(@product.ProductId)"><i
                                                                class="lni lni-cart"></i> Add to Cart</a>
                                                    </div>
                                                </div>
                                                <div class="product-info">
                                                    <span class="category" >@product.Category!.Name</span>
                                                    <h4 class="title">
                                                        <a asp-action="Details" asp-route-id="@product.ProductId" >@product.Name</a>
                                                    </h4>
                                                    <ul class="review">
                                                        <li><i class="lni lni-star-filled"></i></li>
                                                        <li><i class="lni lni-star-filled"></i></li>
                                                        <li><i class="lni lni-star-filled"></i></li>
                                                        <li><i class="lni lni-star-filled"></i></li>
                                                        <li><i class="lni lni-star"></i></li>
                                                        <li><span>4.0 Review(s)</span></li>
                                                    </ul>
                                                    <div class="price" >
                                                        <span>@product.Price EGP</span>
                                                    </div>
                                                </div>
                                            </div>
                                        <!-- End Single Product -->
                                    </div>
                                        }

                                    
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <!-- Pagination -->
                                        <div class="pagination left">
                                            
                                                @* <li><a href="javascript:void(0)">1</a></li> *@
                                                @* <li class="active"><a href="javascript:void(0)">2</a></li> *@
                                                @* <li><a href="javascript:void(0)">3</a></li> *@
                                                @* <li><a href="javascript:void(0)">4</a></li> *@
                                                @* <li><a href="javascript:void(0)"><i *@
                                                @*             class="lni lni-chevron-right"></i></a></li> *@

                                            <ul class="pagination-list">

                                                @if (Model != null && Model.TotalPages > 1)
                                                {
                                                    for (int i = 1; i <= Model.TotalPages; i++)
                                                    {
                                            @if (i == Model.PageNumber)
                                                        {
                                                            <li class="active">
                                                                <a asp-action="GridView" asp-route-categoryId="@Model.SelectedCategoryId"  asp-route-brandId="@Model.SelectedBrandId" asp-route-sortOrder="@Model.SortOrder" asp-route-page="@i">@i</a>
                                                            </li>
                                                        }
                                                        else
                                                        {
                                                            <li>
                                                                <a asp-action="GridView" asp-route-categoryId="@Model.SelectedCategoryId"  asp-route-brandId="@Model.SelectedBrandId" asp-route-sortOrder="@Model.SortOrder" asp-route-page="@i">@i</a>
                                                            </li>
                                                        }

                                                    }
                                                }

                                            
                                            </ul>
                                        </div>
                                        <!--/ End Pagination -->
                                    </div>
                                </div>
