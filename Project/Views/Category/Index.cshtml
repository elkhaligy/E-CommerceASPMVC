@model IEnumerable<Project.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <h1>Categories</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Category</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Descritpion</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.CreatedAt.ToString("g")</td>
                        <td>@(item.UpdatedAt?.ToString("g") ?? "Not Updated")</td>

                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 