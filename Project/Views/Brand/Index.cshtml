@model IEnumerable<Project.Models.Brand>

@{
    ViewData["Title"] = "Brands";
}

<div class="container">
    <h1>Brands</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["DeletedSuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["DeletedSuccessMessage"]
        </div>
    }

    @if (TempData["DeletedFailureMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["DeletedFailureMessage"]
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Brand</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>

                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.BrandId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.BrandId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.BrandId" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 