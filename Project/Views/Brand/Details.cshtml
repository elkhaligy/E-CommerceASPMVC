    ViewData["Title"] = "Brand Details";
}

<div class="container">
    <h1>Brand Details</h1>

    <div>
        <h4>Brand Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
